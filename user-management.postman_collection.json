{
  "info": {
    "name": "NestJS User Management",
    "description": "Collection pour tester l'API User Management avec Auth, JWT, et Users",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"pseudonyme\": \"testuser\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/login",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/refresh",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "http://localhost:3000/auth/logout",
              "host": ["localhost"],
              "port": "3000",
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Create User (Admin only)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"pseudonyme\": \"newuser\",\n    \"password\": \"password456\",\n    \"name\": \"New User\",\n    \"address\": {},\n    \"comment\": \"Nouveau utilisateur\",\n    \"role\": \"USER\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/users",
              "host": ["localhost"],
              "port": "3000",
              "path": ["users"]
            }
          }
        },
        {
          "name": "Get All Users (Admin only)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": {
              "raw": "http://localhost:3000/users",
              "host": ["localhost"],
              "port": "3000",
              "path": ["users"]
            }
          }
        },
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": {
              "raw": "http://localhost:3000/users/me",
              "host": ["localhost"],
              "port": "3000",
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "Update My Profile",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Mon nom modifi√©\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/users/me",
              "host": ["localhost"],
              "port": "3000",
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": {
              "raw": "http://localhost:3000/users/1",
              "host": ["localhost"],
              "port": "3000",
              "path": ["users", "1"]
            }
          }
        },
        {
          "name": "Update User by ID",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Updated User Name by Admin\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/users/1",
              "host": ["localhost"],
              "port": "3000",
              "path": ["users", "1"]
            }
          }
        },
        {
          "name": "Delete User by ID (Admin only)",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": {
              "raw": "http://localhost:3000/users/1",
              "host": ["localhost"],
              "port": "3000",
              "path": ["users", "1"]
            }
          }
        }
      ]
    }
  ]
}
